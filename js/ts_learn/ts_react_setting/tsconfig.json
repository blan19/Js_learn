{
  "compilerOptions": {
    "outDir": "./build",
    "sourceMap": true,
    "allowJs": true,
    "noImplicitAny": true,
    "target": "es5",
    "module": "es6",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
